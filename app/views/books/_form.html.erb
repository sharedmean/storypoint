<div class="card" style="width: 50rem; padding: 20px; margin: 0 auto">
  <%= form_for @book do |form| %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :year_of_release, class: "form-label" %>
        <%= form.text_field :year_of_release, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, class: "form-control" %>
      </div>
      
      <div class="mb-3">
        Author: 
        <%= form.select :author_id, authors_for_select, class:'form-select form-select-lg mb-3' %>      
      </div>

      <div class="mb-3">
        Genre: 
        <% @genres.each_with_index do |genre, i| %>
          <%= check_box_tag "book[genre_ids][#{i}]", genre.id, class: "form-check" %>
          <%= label_tag "book[genre_ids][#{i}]", genre.name, class: "form-check-label" %>
        <% end %>
      </div>
      
      <div class="mb-3">
        Position: 
        <%= form.select :position_id, positions_for_select, class:'form-select form-select-lg mb-3' %>      
      </div>

      <div>
        <%= form.submit("Send", {:class => 'btn btn-primary'}) %>
      </div>
  <% end %>
</div>
