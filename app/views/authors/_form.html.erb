<div class="card" style="width: 50rem; padding: 20px; margin: 0 auto">
  <%= form_for @author do |form| %> 
    <div class="mb-3">
      <%= form.label :first_name, class: "form-label" %>
      <%= form.text_field :first_name, required: true, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :last_name, class: "form-label" %>
      <%= form.text_field :last_name, required: true, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :patronymic, class: "form-label" %>
      <%= form.text_field :patronymic, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :year_of_birth, class: "form-label" %>
      <%= form.text_field :year_of_birth, required: true, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :biography, class: "form-label" %>
      <%= form.text_area :biography, required: true, class: "form-control" %>
    </div>

    <div>
      <%= form.submit("Send", {:class => 'btn btn-primary'}) %>
    </div>
  <% end %>
</div>
