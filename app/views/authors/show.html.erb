<div class="card border-primary mb-3 mt-5 w-25" style="margin:0 auto">
  <div class="card-header"> 
    <%= author_fullanme(@author) %> 
  </div>
  <div class="card-body">
    <p class="card-text"> Born in <b> <%= @author.year_of_birth %> </b> </p>
    <p class="card-text"> <%= @author.biography %> </p>
  </div>
</div> 

<div class="d-flex">
  <h3 class="mb-3 mt-5" style="margin: 0 auto; padding: 20px">
    Author's books
  </h3> 
</div>
<div class="container w-50"> 
  <div class="d-flex justify-content-between align-items-center" style="margin: 0 auto; padding: 20px"> 
      <table class="table">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Year of release</th>
        </tr>
      </thead>
      <tbody>
        <% @author.books.each do |book| %>
          <tr>
            <td> <%= link_to book.title, book_path(book), { :class => 'text-decoration-none text-primary' }%>  </td>
            <td> <%= book.year_of_release %> </td>
          </tr>
        <% end %>
      </tbody
    </table>
  </div>
</div>
